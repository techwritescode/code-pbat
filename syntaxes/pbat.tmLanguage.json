{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PBAT",
	"patterns": [
		{
			"name": "comment",
			"begin": "#",
			"end": "\n"
		},
		{
			"name": "string.quoted.double.pbat",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "[*?]"
				},
				{
					"name": "variable.name",
					"match": "\\$.*?\\$"
				},
				{
					"name": "constant.character.escape",
					"match": "\\^."
				}
			]
		},
		{
			"name": "keyword.control.pbat",
			"match": "\\b(SET|UNSET|SAVEVARS|ECHO|MESSAGE|ADDWIDGET|CLEARWIDGETS|SETTITLE|EVAL|GOTO|IF|ELSE|ELSEIF|ENDIF|COPY|RM|RRM|FORMAT|MKDIR|REDIRFILE|UNMOUNT|FPRINT|LOADEXEC|KEEP|RETURN|EXIT|KILLSESS|SKIPBACK|LOADIMG|UNLOADIMG|PARSEPATH|SETAUTH|SETBIOS|SHUTDOWN|PEEKB|PEEKH|PEEKW|POKEB|POKEH|POKEW|GETDISKTYPE|PARSECNF|CYCLETRAY|LOADSRAM|REBOOTIOP)\\b"
		},
		{
			"name": "keyword.other",
			"match": "\\b(EQU|NEQ|GTE|GT|LTE|LT|EXISTS|MATCHES|FAIL|MODLOADED|ISIN|NOT)\\b"
		},
		{
			"match": "(-)?([0-9]+)",
			"captures": {
				"1": {
					"name": "keyword.operator"
				},
				"2": {
					"name": "constant.numeric"
				}
			}
		},
		{
			"name": "variable.name",
			"match": "\\$(.*?)\\$"
		},
		{
			"name": "support.function",
			"match": ":[a-zA-Z_]+\\b"
		}
	],
	"scopeName": "source.pbat"
}